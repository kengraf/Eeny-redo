{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Resources": {
    "eenyRedoLambdaRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": "eeny-redo-lambda",
        "Tags": [
          {
            "Key": "Owner",
            "Value": "eeny-redo"
          }
        ],
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "lambda.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "eeny-redo-lambda",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": "dynamodb:*",
                  "Resource": "*"
                }
              ]
            }
          }
        ]
      }
    },
    "eenyRedoTable": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "TableName": "eeny-redo",
        "BillingMode": "PAY_PER_REQUEST",
        "Tags": [
          {
            "Key": "Owner",
            "Value": "eeny-redo"
          }
        ],
        "AttributeDefinitions": [
          {
            "AttributeName": "Name",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "Name",
            "KeyType": "HASH"
          }
        ]
      }
    },
    "eenyRedoReloadFunction": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "FunctionName": "eeny-redo-reload",
        "Tags": [
          {
            "Key": "Owner",
            "Value": "eeny-redo"
          }
        ],
        "Runtime": "nodejs16.x",
        "Handler": "index.handler",
        "Role": {
          "Fn::GetAtt": [
            "eenyRedoLambdaRole",
            "Arn"
          ]
        },
        "Code": {
          "ZipFile": "(zip file contents here)"
        }
      }
    },
    "eenyRedoFetchFunction": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "FunctionName": "eeny-redo-fetch",
        "Tags": [
          {
            "Key": "Owner",
            "Value": "eeny-redo"
          }
        ],
        "Runtime": "nodejs16.x",
        "Handler": "index.handler",
        "Role": {
          "Fn::GetAtt": [
            "eenyRedoLambdaRole",
            "Arn"
          ]
        },
        "Code": {
          "ZipFile": "(zip file contents here)"
        },
        "MemorySize": 512
      }
    },
    "eenyRedoSnsTopic": {
      "Type": "AWS::SNS::Topic",
      "Properties": {
        "DisplayName": "eeny-redo-reload"
      }
    },
    "eenyRedoSnsSubscription": {
      "Type": "AWS::SNS::Subscription",
      "Properties": {
        "Protocol": "lambda",
        "TopicArn": {
          "Ref": "eenyRedoSnsTopic"
        },
        "Endpoint": {
          "Fn::GetAtt": [
            "eenyRedoReloadFunction",
            "Arn"
          ]
        }
      }
    },
    "eenyRedoApi": {
      "Type": "AWS::ApiGatewayV2::Api",
      "Properties": {
        "Name": "eeny-redo",
        "ProtocolType": "HTTP",
        "Target": {
          "Fn::GetAtt": [
            "eenyRedoFetchFunction",
            "Arn"
          ]
        }
      }
    },
    "eenyRedoIntegration": {
      "Type": "AWS::ApiGatewayV2::Integration",
      "Properties": {
        "ApiId": {
          "Ref": "eenyRedoApi"
        },
        "IntegrationType": "AWS_PROXY",
        "IntegrationUri": {
          "Fn::GetAtt": [
            "eenyRedoFetchFunction",
            "Arn"
          ]
        },
        "PayloadFormatVersion": "1.0"
      }
    },
    "CustomDomainCertificate": {
      "Type": "AWS::ACM::Certificate",
      "Properties": {
        "DomainName": "*.cyber-unh.org"
      }
    },
    "eenyRedoCustomDomain": {
      "Type": "AWS::ApiGatewayV2::DomainName",
      "Properties": {
        "DomainName": "eeny.cyber-unh.org",
        "DomainNameConfigurations": [
          {
            "CertificateArn": {
              "Ref": "CustomDomainCertificate"
            },
            "EndpointType": "REGIONAL"
          }
        ]
      }
    },
    "eenyRedoApiMapping": {
      "Type": "AWS::ApiGatewayV2::ApiMapping",
      "Properties": {
        "ApiId": {
          "Ref": "eenyRedoApi"
        },
        "DomainName": {
          "Ref": "eenyRedoCustomDomain"
        },
        "Stage": "$default"
      }
    },
    "Route53Record": {
      "Type": "AWS::Route53::RecordSetGroup",
      "Properties": {
        "HostedZoneId": "ZRWFREAU725TM",
        "RecordSets": [
          {
            "Name": "eeny2.cyber-unh.org.",
            "Type": "A",
            "AliasTarget": {
              "HostedZoneId": {
                "Fn::GetAtt": [
                  "eenyRedoCustomDomain",
                  "HostedZoneId"
                ]
              },
              "DNSName": {
                "Fn::GetAtt": [
                  "eenyRedoCustomDomain",
                  "ApiGatewayDomainName"
                ]
              },
              "EvaluateTargetHealth": false
            }
          }
        ]
      }
    }
  }
}
