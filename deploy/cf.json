{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Parameters" : {
      "S3bucketName" : { "Type" : "String" },
      "DnsName" : { "Type" : "String" },
      "DeployName" : { "Type" : "String" }
  },
  "Resources": {
    "LambdaRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": {"Fn::Sub" : "${DeployName}-lambda"},
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "lambda.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": {"Fn::Sub" : "${DeployName}lambda"},
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": "dynamodb:*",
                  "Resource": "*"
                }
              ]
            }
          }
        ]
      }
    },
    "Table": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "TableName": {"Fn::Sub" : "${DeployName}"},
        "BillingMode": "PAY_PER_REQUEST",
        "AttributeDefinitions": [
          {
            "AttributeName": "Name",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "Name",
            "KeyType": "HASH"
          }
        ]
      }
    },
    "ReloadFunction": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "FunctionName": {"Fn::Sub" : "${DeployName}-reload"},
        "Runtime": "nodejs16.x",
        "Handler": "index.handler",
        "Role": {
          "Fn::GetAtt": [
            "LambdaRole",
            "Arn"
          ]
        },
        "Code": {
          "S3Bucket": {"Fn::Sub" : "${S3bucketName}" },
          "S3Key": "reload.zip" 
        }
      }
    },
    "FetchFunction": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "FunctionName": {"Fn::Sub" : "${DeployName}-fetch"},
        "Runtime": "nodejs16.x",
        "Handler": "index.handler",
        "Role": {
          "Fn::GetAtt": [
            "LambdaRole",
            "Arn"
          ]
        },
        "Code": {
          "S3Bucket": {"Fn::Sub" : "${S3bucketName}" },
          "S3Key": "fetch.zip"
        },
        "MemorySize": 512
      }
    }
  }
}
